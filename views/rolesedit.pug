    }
    #clr-picker {
    position: fixed !important;
    z-index: 9999 !important;
    }
    .modalssbackdrop {
    position: fixed;
    top: 0;
    left: 0;
    opacity: 0.2;
    z-index: 1040;
    width: 100vw;
