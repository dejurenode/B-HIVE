extends basee

block content
  .card.card-custom.card-shadowless.rounded-top-0(style="margin-top:120")
    // begin::Body
    .card-body.p-0
      .row.justify-content-center.py-8.px-8.py-lg-15.px-lg-10
        .col-xl-12.col-xxl-10
          // begin::Wizard Form
          .row.mb-5.placedOrder
            .col-md-12.d-flex.justify-content-start
              h3.page-title.d-flex.justify-content-center.align-items-center
                | Roles
          each item in role
            .row.mt-4
              .col-3.d-flex
                h5= item.name
                img.edoDel(src='/images/delete.png', width='20px', height='20px', style='margin-left: 15px;',data-role=`${item._id}`, alt='')
                img.edo(src='/images/draw.png', width='18px', style='margin-left: 15px;', height='18px', alt='',data-role=`${item._id}`)
          .opa(style='background-color: #f8de71; margin-top: 20px; display: inline-block; padding: 10px; border-radius: 50%;', data-toggle='modal', data-target='#deleteModal')
            img(src='/images/plus.png', style='width: 20px;', alt='')


  #deleteModal.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', data-keyboard='false')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        form.addroles
          .modal-header
            h5#exampleModalCenterTitle.modal-title Add Role
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            .form-group
              label(for='') Roll Name
              input.alifing.form-control(type='text')
          .modal-footer
            button.btn(type='submit', style='background-color: #f6d444; color: white')
              span.noload Add
              .spinner-border.load.d-none(role='status', style="color:white")
                span.sr-only Loading...
            button.btn.butas(type='button', style='background-color: #4b4b4b; color: white', data-dismiss='modal') Cancel
  #EdosDelaModal.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', data-keyboard='false')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#exampleModalCenterTitle.modal-title Are you sure you want to delete this role?
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-footer
          button.btn.cdns(type='submit', style='background-color: #f6d444; color: white')
            span.noload91 Confirm
            .spinner-border.load91.d-none(role='status', style="color:white")
              span.sr-only Loading...
          button.btn.butas(type='button', style='background-color: #4b4b4b; color: white', data-dismiss='modal') Cancel
