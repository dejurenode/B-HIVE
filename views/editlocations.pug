extends basee

block content
  .card.card-custom.card-shadowless.rounded-top-0(style="margin-top:120")
    // begin::Body
    .card-body.p-0
      .row.justify-content-center.py-8.px-8.py-lg-15.px-lg-10
        .col-xl-12.col-xxl-10
          // begin::Wizard Form
          .row.mb-5.placedOrder
            .col-md-12.d-flex.justify-content-start
              h3.page-title.d-flex.justify-content-center.align-items-center
                | Edit Location
          h5(style="font-weight:bold") Name
          .row.mt-4
            .col-sm-5.d-flex.align-items-center
              input.numa(value=`${location.name}`, readonly, disabled)
              img.edosLoca(src='/images/draw.png', width='18px', style='margin-left: 15px;', height='18px', alt='')
              button.ml-2.d-none.edabutak.btn.btn-block(style='background-color: #f8de71; color:white;',data-id=`${location._id}`,data-opa=`${location._id}`)
                span(class=`noload99`) Update Location
                .spinner-border.d-none(role='status',class=`load99`, style="color:white")
                  span.sr-only Loading...
          h5.mt-3(style="font-weight:bold") Teams
          if location.teams.length > 0
            -let a=0 
            each item in location.teams
              - a++
              .row.mt-4
                .col-sm-5.d-flex.align-items-center
                  input.janda(value=`${item.name}`,data-janda=`numa${a}`, readonly, disabled)
                  img.okaal(src='/images/draw.png',data-okaa=`edasa${a}`, width='18px', style='margin-left: 15px;',data-id=`${item._id}` height='18px', alt='')
                  img.edoDelsap(src='/images/delete.png', width='20px', height='20px', style='margin-left: 15px;',data-location=`${item._id}`, alt='')
                  button.d-none.edabuta.btn.btn-block(style='background-color: #f8de71; color:white;',data-obaa=`${a}`,data-id=`${item._id}`,data-opa=`${location._id}`)
                    span(class=`noload99${a}`) Update Team
                    .spinner-border.d-none(role='status',class=`load99${a}`, style="color:white")
                      span.sr-only Loading...

          .opasaha(style='background-color: #f8de71; margin-top: 20px; display: inline-block; padding: 10px; border-radius: 50%;', data-id=`${location._id}`)
            img(src='/images/plus.png', style='width: 20px;', alt='')
          .row.mt-3.omgaas.d-none
            .col-md-12.text-center 
              button.btn(style='background-color: #f6d444; color:white; font-size:15px') Save 

  #deleteModal.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', data-keyboard='false')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        form.addlocations
          .modal-header
            h5#exampleModalCenterTitle.modal-title Add Team
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            .form-group
              label(for='') Team Name
              input.alifing.form-control(type='text')
          .modal-footer
            button.btn.okabab(type='button', style='background-color: #f6d444; color: white')
              span.noload Add
              .spinner-border.load.d-none(role='status', style="color:white")
                span.sr-only Loading...
            button.btn.butas(type='button', style='background-color: #4b4b4b; color: white', data-dismiss='modal') Cancel
  #EdosDelaModal.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', data-keyboard='false')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#exampleModalCenterTitle.modal-title Are you sure you want to delete this Location?
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-footer
          button.btn.cdns24(type='submit', style='background-color: #f6d444; color: white',data-opa=`${location._id}`)
            span.noload91 Confirm
            .spinner-border.load91.d-none(role='status', style="color:white")
              span.sr-only Loading...
          button.btn.butas(type='button', style='background-color: #4b4b4b; color: white', data-dismiss='modal') Cancel
