          input.form-control.email(type='text', style='\
          background: transparent;\
          border: none;\
          padding: 0%;\
          border-bottom: 1px solid black;\
          border-radius: 0%;\
          ')
        .form-group(style='\
        display: flex;\
        flex-direction: column;\
        align-items: flex-start;\
        ')
          label(for='', style='font-weight: bolder; margin-bottom: -8px; font-size: 20px') Password
